
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // This rule covers all files within the serviceAds folder.
    // It allows anyone to read files (public access for portfolios)
    // but only the owner can write (upload, update, delete).
    match /serviceAds/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
