
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Default deny all reads and writes
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }

    // Allow public read access on portfolio images and videos
    match /serviceAds/{userId}/{mediaType}/{fileId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload chat files
    // Reading is also restricted to authenticated users, as URLs are unguessable
    // and only shared with participants via Firestore.
    match /chats/{chatId}/{fileId} {
      allow read, write: if request.auth != null;
    }
  }
}
