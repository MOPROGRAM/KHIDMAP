
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Portfolio media files
    match /serviceAds/{userId}/{allPaths=**} {
      // Anyone can read images/videos for public profiles
      allow read: if true;
      // Only the authenticated owner can upload/delete
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
