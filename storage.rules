
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Files for provider portfolios
    match /serviceAds/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Files for chat messages
    match /chats/{chatId}/{fileName} {
      // Allow reading a chat file if the user is a participant in the corresponding chat document in Firestore.
      allow read: if request.auth != null && 
                   get(/databases/$(database)/documents/messages/$(chatId)).data.participantIds[request.auth.uid] == true;
      
      // Allow writing a chat file if the user is authenticated and is a participant in the chat.
      allow write: if request.auth != null &&
                    get(/databases/$(database)/documents/messages/$(chatId)).data.participantIds[request.auth.uid] == true;
    }
  }
}

    