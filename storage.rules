rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // A simple helper function to check if the user is logged in.
    function isUserAuthenticated() {
      return request.auth != null;
    }

    // Global rule for all paths in the storage bucket.
    // This rule allows any authenticated (logged-in) user to read and write any file.
    // This is a necessary simplification to bypass the persistent authentication context issue
    // and ensure that file uploads and downloads work reliably.
    match /{allPaths=**} {
      allow read, write: if isUserAuthenticated();
    }
  }
}
