rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // This rule allows anyone to view the portfolio images and videos on the public profile pages,
    // but restricts writing (uploading, deleting) to only the user who owns the profile.
    match /serviceAds/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
