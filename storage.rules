rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for anyone
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow writes (uploads) for authenticated users to their own portfolio
    match /serviceAds/{userId}/{folder}/{fileName} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow writes for chat files only if the user is a participant of the chat
    match /chats/{chatId}/{fileName} {
        allow write: if request.auth != null && exists(/databases/(default)/documents/messages/$(chatId)) && request.auth.uid in get(/databases/(default)/documents/messages/$(chatId)).data.participantIds;
    }
  }
}
