
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /ratings/{ratingId} {
        allow read: if true;
        allow create: if request.auth != null;
    }
    
    match /chats/{chatId} {
      // Allow read/update access only if the requesting user is a participant in the chat.
      allow read, update: if request.auth.uid in resource.data.participants;
      
      // Allow creation if the user is one of the participants being added.
      allow create: if request.auth.uid in request.resource.data.participants;

      match /messages/{messageId} {
        // A user can read messages if they are a participant in the parent chat.
        allow read: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // A user can create a message if they are a participant and the sender.
        allow create: (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants) && (request.auth.uid == request.resource.data.senderId);
      }
    }
  }
}
