
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read any profile, but only write to their own.
    match /users/{userId} {
      allow read;
      allow write: if request.auth.uid == userId;
    }

    // Users can read any rating, but only create ratings where they are the rater.
    match /ratings/{ratingId} {
        allow read;
        allow create: if request.auth.uid == request.resource.data.raterUserId;
    }

    // Rules for the chat system.
    // A user can only access a chat document if they are a participant.
    match /messages/{chatId} {
      allow read, update: if request.auth.uid in resource.data.participants;
      allow create: if request.auth.uid in request.resource.data.participants;

      // Rules for the messages subcollection within a chat.
      // A user can only access messages if they are a participant.
      // This requires the 'participants' array to be on each message document.
      match /messages/{messageId} {
          allow read, write: if request.auth.uid in resource.data.participants;
      }
    }
  }
}
