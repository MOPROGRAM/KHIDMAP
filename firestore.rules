
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User Profiles: Anyone can read, only the owner can write.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // Ratings: Anyone can read, only authenticated users can create.
    match /ratings/{ratingId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // --- Messaging Rules ---

    // Chat document: Users can only read/write if they are a participant.
    match /messages/{chatId} {
      allow read, update: if request.auth.uid in resource.data.participants;

      // Messages sub-collection: Users can only access if they are a participant.
      match /messages/{messageId} {
        allow read, create: if request.auth.uid in resource.data.participants;
      }
    }
  }
}
