
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read anyone's profile (for public provider pages)
    // but can only create, update, or delete their own.
    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can read ratings.
    // Only authenticated users can create new ratings.
    // Updates and deletes are disallowed for simplicity and to preserve history.
    match /ratings/{ratingId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // --- MESSAGING RULES ---
    
    // A user can read/update a chat document (the conversation itself)
    // only if they are a participant.
    match /messages/{chatId} {
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null;
      
      // A user can read/create messages within a subcollection
      // only if they are a participant. This rule checks the 'participants' array
      // which is stored on each message document.
      match /messages/{messageId} {
        allow read, create: if request.auth != null && request.auth.uid in request.resource.data.participants;
        allow update, delete: if false; // Disallow editing/deleting messages
      }
    }
  }
}
