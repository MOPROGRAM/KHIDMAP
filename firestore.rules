
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own profile
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // Ratings can be read by anyone, but only created by authenticated users.
    // Users cannot edit or delete ratings after posting.
    match /ratings/{ratingId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // --- MESSAGING RULES ---
    // A chat document contains metadata about the conversation
    match /messages/{chatId} {
      // Allow read/write only if the requesting user is a participant in the chat
      allow read, write: if request.auth.uid in resource.data.participants;

      // Messages sub-collection within a chat
      match /messages/{messageId} {
        // Allow read only if the user is a participant of the parent chat document
        allow read: if get(/databases/$(database)/documents/messages/$(chatId)).data.participants.hasAny([request.auth.uid]);
        
        // Allow create only if the user is the sender and a participant
        allow create: if request.auth.uid == request.resource.data.senderId &&
                       get(/databases/$(database)/documents/messages/$(chatId)).data.participants.hasAny([request.auth.uid]) &&
                       (request.resource.data.type == 'text' || request.resource.data.type == 'audio');
                       
        // Disallow updates and deletes for message history integrity
        allow update, delete: if false;
      }
    }
  }
}
