rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    match /ratings/{ratingId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    match /chats/{chatId} {
      allow get: if request.auth.uid in resource.data.participants;
      allow list: where request.auth.uid in resource.data.participants;
      allow create: if request.auth.uid in request.resource.data.participants;
      allow update, delete: if false; // Disallow direct updates/deletes for now

      match /messages/{messageId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
