rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users:
    // - Anyone can create their own user document (on registration).
    // - Logged-in users can read anyone's profile (to view provider details).
    // - A user can only update or delete their own profile.
    match /users/{userId} {
      allow read;
      allow create: if request.auth.uid == userId;
      allow update, delete: if request.auth.uid == userId;
    }

    // Ratings:
    // - A logged-in user can create a rating.
    // - Anyone can read ratings.
    match /ratings/{ratingId} {
        allow read;
        allow create: if request.auth != null;
    }
    
    // Chats & Messages:
    // This structure ensures complete privacy for conversations.
    match /chats/{chatId} {
      // Allow read/update only if the requesting user is a participant in the chat.
      allow read, update: if request.auth.uid in resource.data.participants;
      
      // Allow creation only if the requesting user is one of the participants being added.
      allow create: if request.auth.uid in request.resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
         // Allow read only if the user is a participant of the parent chat.
        allow read: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;

        // Allow message creation if:
        // 1. The user is a participant of the parent chat.
        // 2. The senderId in the new message is their own UID.
        allow create: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants
                      && request.resource.data.senderId == request.auth.uid;
      }
    }
  }
}
